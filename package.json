{
  "name": "douglas-data-capture-platform",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "license": "AGPL-3.0",
  "scripts": {
    "build": "env-cmd NODE_ENV=production turbo run build",
    "check-types": "turbo run check-types",
    "clean": "fd -H -I --prune \".turbo|dist|node_modules\" --exec rm -rf",
    "dev": "env-cmd cross-env NODE_ENV=development turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "storybook": "yarn ws client storybook",
    "test": "env-cmd turbo run test",
    "ws": "env-cmd yarn workspace"
  },
  "devDependencies": {
    "@douglas-data-capture-platform/eslint-config": "*",
    "@douglas-data-capture-platform/tsconfig": "*",
    "@types/node": "^18.11.18",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.31.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "turbo": "^1.7.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "zod": "^3.20.2"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "npm": ">=9.0.0 <10.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
